package com.epam.module01.main;
//6. Для данной области составить линейную программу, которая печатает true, если точка с координатами (х, у) принадлежит закрашенной области, и false — в противном случае:
public class Main38 {

	public static void main(String[] args) {
		
		int n2 = 5555;

        int sum1 = 0;
        int newNumber = n2;
        int count = 0;
        while (count < 2) {
            sum1 = sum1 + (newNumber % 10);
            newNumber = newNumber / 10;
            count++;
        }

        int sum2 = 0;
        count = 0;
        while (count < 2) {
            sum2 = sum2 + (newNumber % 10);
            newNumber = newNumber / 10;
            count++;
        }

        if (sum1 == sum2) {
            System.out.print("True: ");
        }
        else{
            System.out.print("False: ");
        }
        System.out.println("Сумма двух первых цифр четырехзначного числа " + n2 + " равна сумме двух его последних цифр.");

	}

}
